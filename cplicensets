        push @WARNINGS, RED "Send to L3" unless ( !iam('cptech') );
    }
    if ($CS) {
        my $CSA = CSA();
        if ($CSA) {

            # CS is on shift and nothing suspicious was found.
            push @WARNINGS, RED "Send to Customer Service" unless ($L3);
        }
